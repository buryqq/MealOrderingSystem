<fieldset>
  <%= f.label :name, "Meal" %>
  <%= f.text_area :name %>
    <%= f.label :price, "Price" %>
    <%= f.number_field :price, value: number_to_currency(f.object.price.to_f, delimiter: '', unit: ''), step: :any %>
     <div class="field">
    <%= f.hidden_field :user_id, value: current_user.id %>
   </div>  
  <%= f.hidden_field :_destroy %>
  <%= link_to "remove", '#', class: "remove_fields" %>
 
</fieldset>
